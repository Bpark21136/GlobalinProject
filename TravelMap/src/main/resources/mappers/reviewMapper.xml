<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.travel.mapper.ReviewMapper">
	<insert id="insertReview" parameterType="com.web.travel.dto.ReviewDTO" useGeneratedKeys="true" keyProperty="reviewID">
		insert into review ( 
			title, 
			preview, 
			content,
			userid,
			pointid
		) 
		values (
			#{title}, 
			#{preview}, 
			#{content}, 
			#{userID},
			#{pointID}
		)
	</insert>
	
	<select id="selectReviewById" resultType="com.web.travel.dto.ReviewDTO">
		SELECT * FROM REVIEW WHERE REVIEWID = #{reviewID}
	</select>

</mapper>
